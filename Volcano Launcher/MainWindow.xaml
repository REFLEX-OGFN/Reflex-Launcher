<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Volcano_Launcher"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Class="Volcano_Launcher.MainWindow"
    mc:Ignorable="d"
    Title="REFLEX Launcher"
    Height="600"
    Width="1000"
    ResizeMode="NoResize"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen">
    <Grid Background="#FF161B2D">
        <ui:TitleBar ShowMaximize="False" CanMaximize="False" Height="31" Width="1000" Foreground="White" ButtonsForeground="White"/>
        <Border HorizontalAlignment="Left" Height="600" VerticalAlignment="Center" Width="212" Background="#FF161F3E"/>
        <Border HorizontalAlignment="Left" Height="97" Margin="52,31,0,0" VerticalAlignment="Top" Width="108" CornerRadius="75,75,75,75">
            <Border.Background>
                <ImageBrush ImageSource="/Windows/RELFEX.png"/>
            </Border.Background>
        </Border>
        <Button Content="Home" Height="45" Margin="22,164,0,0" VerticalAlignment="Top" Width="168" FontWeight="Bold" BorderThickness="0,0,0,0" Click="Button_Click"/>
        <Button Content="Library" Height="45" Margin="22,214,0,0" VerticalAlignment="Top" Width="168" FontWeight="Bold" BorderThickness="0,0,0,0" Click="Button_Click_1"/>
        <Button Content="Donate" Height="45" Margin="22,264,0,0" VerticalAlignment="Top" Width="168" FontWeight="Bold" BorderThickness="0,0,0,0" Click="Button_Click_2"/>
        <!--Button Content="Settings" Height="45" Margin="22,545,0,0" VerticalAlignment="Top" Width="168" FontWeight="Bold" BorderThickness="0,0,0,0" Click="Button_Click_3"/!-->
        <Frame x:Name="NavigationVolcano" HorizontalAlignment="Left" Margin="212,31,0,0" VerticalAlignment="Top" Height="569" Width="788"/>
    </Grid>
</Window>