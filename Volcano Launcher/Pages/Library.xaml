<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Class="Volcano_Launcher.Pages.Library"
    Title="Library"
    Height="569"
    Width="788"
    Loaded="Page_Loaded">

    <Page.Resources>
        <Storyboard x:Key="SlideInStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SlideTransform"
                Storyboard.TargetProperty="X"
                From="100" To="0"
                Duration="0:0:0.5"
                AccelerationRatio="0.3"
                DecelerationRatio="0.3" />
            <DoubleAnimation
                Storyboard.TargetName="MainGrid"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1"
                Duration="0:0:0.5" />
        </Storyboard>
    </Page.Resources>

    <Grid x:Name="MainGrid" Opacity="0" RenderTransformOrigin="0,0">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="SlideTransform" X="100"/>
        </Grid.RenderTransform>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="763*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="PathBox"
                 Height="2"
                 Margin="370,338,393,0"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap"
                 Background="#FF272727"
                 RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=Self}}" Value="">
                            <Setter Property="ToolTip" Value="Game Path" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button
                Margin="128,2,0,537"
                VerticalAlignment="Stretch"
                Width="43"
                BorderThickness="0"
                FontWeight="Bold"
                Content="+"
                Click="Button_SelectFolder_Click" RenderTransformOrigin="1.909,0.538" />

        <Border BorderBrush="#FF003479"
                Background="#FF1E1E1E"
                CornerRadius="9,9,9,9"
                Margin="10,80,555,0"
                Height="279"
                VerticalAlignment="Top"
                Visibility="Visible"
                x:Name="SplashContainer"
                MouseLeftButtonUp="SplashContainer_Click"
                Cursor="Hand"
                RenderTransformOrigin="0.49,0.525">
            <Border CornerRadius="20,20,20,20" ClipToBounds="True">
                <Image x:Name="SplashPreview"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
        </Border>

        <ui:TextBlock HorizontalAlignment="Left"
                      Height="24"
                      Margin="10,364,0,0"
                      TextWrapping="Wrap"
                      Text="Fortnite"
                      VerticalAlignment="Top"
                      Width="172"
                      Foreground="White"
                      FontWeight="Bold"
                      FontFamily="Segoe UI Variable Text Semibold"
                      FontSize="18"/>

        <ui:TextBlock HorizontalAlignment="Left"
                      Height="53"
                      Margin="10,-4,0,0"
                      TextWrapping="Wrap"
                      Text="Library"
                      VerticalAlignment="Top"
                      Width="116"
                      Foreground="White"
                      FontWeight="Bold"
                      FontFamily="Segoe UI Variable Text Semibold"
                      FontSize="35"
                      RenderTransformOrigin="-0.332,0.598"/>
    </Grid>
</Page>
