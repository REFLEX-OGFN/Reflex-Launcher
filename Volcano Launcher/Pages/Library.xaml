<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Class="Volcano_Launcher.Pages.Library"
    Title="Library"
    Height="569"
    Width="788"
    Loaded="Page_Loaded">

    <Page.Resources>
        <Storyboard x:Key="SlideInStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SlideTransform"
                Storyboard.TargetProperty="X"
                From="100" To="0"
                Duration="0:0:0.5"
                AccelerationRatio="0.3"
                DecelerationRatio="0.3" />
            <DoubleAnimation
                Storyboard.TargetName="MainGrid"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1"
                Duration="0:0:0.5" />
        </Storyboard>
        
        <Storyboard x:Key="ImportAnimation">
            <DoubleAnimation
                Storyboard.TargetName="ImportButton"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1"
                Duration="0:0:0.3" />
            <DoubleAnimation
                Storyboard.TargetName="ImportText"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1"
                Duration="0:0:0.3" />
        </Storyboard>

        <Storyboard x:Key="SplashFadeIn">
            <DoubleAnimation
                Storyboard.TargetName="SplashContainer"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1"
                Duration="0:0:0.5" />
        </Storyboard>

        <Storyboard x:Key="ImportFadeOut">
            <DoubleAnimation
                Storyboard.TargetName="ImportContainer"
                Storyboard.TargetProperty="Opacity"
                From="1" To="0"
                Duration="0:0:0.3" />
        </Storyboard>
    </Page.Resources>

    <Grid x:Name="MainGrid" Opacity="0" RenderTransformOrigin="0,0">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="SlideTransform" X="100"/>
        </Grid.RenderTransform>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="763*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <Border x:Name="ImportContainer" 
                Background="#FF1E1E1E"
                CornerRadius="15"
                Margin="10,80,555,0"
                Height="279"
                VerticalAlignment="Top"
                BorderBrush="#FF003479"
                BorderThickness="1">
            <Grid>
                <Border Background="#FF003479" 
                        Opacity="0.1"
                        CornerRadius="15"/>
                
                <Button x:Name="ImportButton"
                        Opacity="0"
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="70"
                        Height="70"
                        BorderThickness="0"
                        Background="#FF003479"
                        Click="Button_SelectFolder_Click"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="35">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="+" 
                             FontSize="35" 
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Button>
                
                <ui:TextBlock x:Name="ImportText"
                             Opacity="0"
                             Text="Click to Import Fortnite Build"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Bottom"
                             Margin="0,0,0,20"
                             Foreground="White"
                             FontSize="14"/>
            </Grid>
        </Border>

        <Border BorderBrush="#FF003479"
                Background="#FF1E1E1E"
                CornerRadius="15"
                Margin="10,80,555,0"
                Height="279"
                VerticalAlignment="Top"
                Visibility="Collapsed"
                x:Name="SplashContainer"
                MouseLeftButtonUp="SplashContainer_Click"
                Cursor="Hand"
                Opacity="0"
                RenderTransformOrigin="0.49,0.525">
            <Border CornerRadius="15" ClipToBounds="True">
                <Grid>
                    <Border Background="#FF1E1E1E" CornerRadius="15"/>
                    <Border CornerRadius="15" ClipToBounds="True">
                        <Image x:Name="SplashPreview"
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Border>

        <ui:TextBlock HorizontalAlignment="Left"
                      Height="24"
                      Margin="10,364,0,0"
                      TextWrapping="Wrap"
                      Text="Fortnite"
                      VerticalAlignment="Top"
                      Width="172"
                      Foreground="White"
                      FontWeight="Bold"
                      FontFamily="Segoe UI Variable Text Semibold"
                      FontSize="18"/>

        <ui:TextBlock HorizontalAlignment="Left"
                      Height="53"
                      Margin="10,-4,0,0"
                      TextWrapping="Wrap"
                      Text="Library"
                      VerticalAlignment="Top"
                      Width="116"
                      Foreground="White"
                      FontWeight="Bold"
                      FontFamily="Segoe UI Variable Text Semibold"
                      FontSize="35"
                      RenderTransformOrigin="-0.332,0.598"/>
    </Grid>
</Page>
