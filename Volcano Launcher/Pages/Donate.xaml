<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Volcano_Launcher.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
    x:Class="Volcano_Launcher.Pages.Donate"
    mc:Ignorable="d" 
    Height="569" Width="788"
    Title="Donate"
    Loaded="Page_Loaded">

    <Grid x:Name="DonateGrid">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="SlideTransform"/>
        </Grid.RenderTransform>

        <ui:Button Width="416" HorizontalAlignment="Center" Content="Benjio Donator" Click="Benjio_Click"/>

        <Border BorderBrush="Black" HorizontalAlignment="Center" Height="219" VerticalAlignment="Top" Width="768" CornerRadius="6,6,6,6">
            <Border.Background>
                <ImageBrush ImageSource="/Pages/4af42282-c80e-4af7-98a2-119b56546f48.png" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <ui:Button Width="416" HorizontalAlignment="Center" Margin="0,329,0,0" VerticalAlignment="Top" Content="Portal Donator" Click="PortalDonator_Click"/>

        <ui:Button Width="416" HorizontalAlignment="Center" Margin="0,392,0,0" VerticalAlignment="Top" Content="Diamond Donator" Click="Diamond_Click"/>
        <ui:Button Width="416" HorizontalAlignment="Center" Margin="0,454,0,0" VerticalAlignment="Top" Content="Reflex Donator" Click="ReflexDonator_Click"/>
    </Grid>
</Page>
